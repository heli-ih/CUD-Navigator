// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Faculty {
  id         Int      @id @default(autoincrement())
  name       String
  position   String
  roomName   String?
  room       Room?    @relation(fields: [roomName], references: [name])
}

model Room {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  faculties Faculty[]
}
